{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "noLib": false,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}